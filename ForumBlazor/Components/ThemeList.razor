@namespace ForumBlazor.Components
@inject NavigationManager NavigationManager

<h3>Themes</h3>

@if (Themes == null || Themes.Count == 0)
{
    <p>No themes available.</p>
}
else
{
    <ul>
        @foreach (var theme in Themes)
        {
            <li>
                <h4 @onclick="() => NavigateToTheme(theme.Id)" style="cursor: pointer; color: blue;">
                    @theme.Name
                </h4>
                <p>@theme.Description</p>
                <p><small>Created on @theme.CreatedAt.ToString("yyyy-MM-dd")</small></p>
            </li>
        }
    </ul>
}

@code {
    [Parameter]
    public List<ForumBlazor.Models.Theme> Themes { get; set; }

    private void NavigateToTheme(int themeId)
    {
        NavigationManager.NavigateTo($"/theme/{themeId}");
    }
}